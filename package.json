{
  "name": "monorepo_template",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "repository": "git@github.com:rafaelrozon/monorepo_template.git",
  "author": "Rafael Rozon <rafaelrozon.developer@gmail.com>",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "yarn workspaces run clean && yarn run clean:root",
    "clean:root": "rm -rf node_modules",
    "format:pkg": "format-package -w",
    "lint": "yarn workspaces run lint",
    "lint-fix": "yarn workspaces run lint-fix",
    "postinstall": "npm run format:pkg",
    "storybook:ui": "yarn workspace @monorepo_template/ui storybook",
    "test": "yarn workspaces run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspace @monorepo_template/ui pre-commit"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/react-test-renderer": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "awesome-typescript-loader": "^5.2.1",
    "better-npm-run": "^0.1.1",
    "eslint": "6.7.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "format-package": "5.2.0",
    "prettier": "^1.19.1"
  }
}
