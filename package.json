{
  "name": "monorepo_template",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "repository": "git@github.com:rafaelrozon/monorepo_template.git",
  "author": "Rafael Rozon <rafaelrozon.developer@gmail.com>",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "clean": "yarn workspaces run clean && yarn run clean:root",
    "clean:root": "rimraf node_modules",
    "commit": "git-cz",
    "format:pkg": "format-package -w",
    "lint": "yarn workspaces run lint",
    "lint-fix": "yarn workspaces run lint-fix",
    "postinstall": "npm run format:pkg",
    "storybook:ui": "yarn workspaces run storybook",
    "test": "yarn workspaces run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspaces run pre-commit",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.7.7",
    "@types/jest": "^24.0.23",
    "@types/react-test-renderer": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "awesome-typescript-loader": "^5.2.1",
    "better-npm-run": "^0.1.1",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "6.7.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "format-package": "5.2.0",
    "husky": "^4.0.0-beta.5",
    "jest": "^24.9.0",
    "monorepo-run": "^0.4.2",
    "prettier": "^1.19.1",
    "rimraf": "3.0.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.2"
  }
}
