{
  "name": "@monorepo_template/core",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf node_modules yarn-error.log",
    "lint": "find -E ./src -regex \".*\\.(ts|tsx|js|jsx)\" | xargs eslint",
    "lint-fix": "find -E ./src -regex \".*\\.(ts|tsx|js|jsx)\"  | xargs eslint --fix",
    "pre-commit": "yarn lint-fix && yarn prettier",
    "prettier": "prettier --write ./src/**/*.ts",
    "test": "jest --config=config/jest.config.js"
  },
  "dependencies": {
    "@monorepo_template/tools": "1.0.0"
  }
}
